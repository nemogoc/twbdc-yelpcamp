<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground</h1>
        <div style="width:30%; margin: 35px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label>Campground Name:<input class="form-control" type="text" name="name"></label>
                </div>
                <div class="form-group">
                    <label>Campground Image URL:<input class="form-control" type="text" name="url"></label>
                </div>
                <div class="form-group">
                    <label>Campground Description:<input class="form-control" type="text" name="description"></label>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Back to home</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>