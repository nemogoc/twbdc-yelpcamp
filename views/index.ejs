<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a campground</a></p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>" alt="campground"></a>
                    <div class="caption">
                        <h4><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></h4>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <a href="/">Back to home</a>

</div>

<% include partials/footer %>
